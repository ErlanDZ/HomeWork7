<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardItemFragment">

    <ImageView
        android:id="@+id/image_fr"
        android:src="@drawable/content12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146.03dp"
        android:layout_width="267.16dp"
        android:layout_height="267.16dp"/>

    <TextView
        android:id="@+id/title_fr"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="454dp"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="6sp"
        android:translationY="-2.89sp"
        android:gravity="center_horizontal|top"
        android:layout_width="295dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/description_fr"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="512dp"
        android:text="TITLE"
        android:lineSpacingExtra="6sp"
        android:translationY="-2.89sp"
        android:gravity="center_horizontal|top"/>

</RelativeLayout>